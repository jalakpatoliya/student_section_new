  <body>
    <br>
    <div class="ui container">

      <div class="ui secondary  menu" >
        <a class=" item" href="/welcome" >
        Home
      </a>
        <a class="item" href="/search/student" tabindex="0">
          Profile
      </a>
      <a class="item" href="/edit/student">
         Change Profile Details
     </a>
      <a class="item" href="/student/uploads/pdf">
         Upload Pdf
     </a>

     <a class="item" href="#">
       Notifications
       <div class="ui label">51</div>
     </a>
        <div class="right menu">
          <div class="item">
            <div class="ui icon input">
              
            </div>
          </div>
        </div>

        <div class="ui  dropdown item " id="LoginDropdown">
          <i class="user icon large"></i>
          <div class="menu">
            <%  if (!currentUser) {  %>
              <a class="item" href="/login">Login </a>
              <% } else if(currentUser.role=="user"){ %>
                <a class="item" href="#" style="text-align:center;">Signed in as:</a>
                <h2 class="item" style="text-align:center;"><%= currentUser.username%></h2>
                <a class="item" href="/logout" style="text-align:center;">Logout</a>
                <% }else if (currentUser.role=="admin") { %>
                  <div class="ui top right attached label">Admin</div>
                  <a class="item" href="#" style="text-align:center;">Signed in as:</a>
                  <h2 class="item"style="text-align:center;"><%= currentUser.username%></h2>
                  <a class="item" href="/logout" style="text-align:center;">Logout</a>
                  <% }else if (currentUser.role=="student") { %>
                    <div class="ui top right attached label">student</div>
                    <a class="item" href="#" style="text-align:center;">Signed in as: </a>
                    <h2 class="item"style="text-align:center;"><%= currentUser.username%></h2>
                    <a class="item" href="/logout" style="text-align:center;">Logout</a>
                    <% } %>
          </div>
        </div>
      </div>
      <div class="ui hidden divider"></div>

      <script type="text/javascript">
        $('#LoginDropdown')
          .dropdown({
            action: 'hide'
          });

       $('#men').state();
       $(function() {
        $('a[href^="/' + location.pathname.split("/")[1] + '"]').addClass('active');
      });
      </script>
